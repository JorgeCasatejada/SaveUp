<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/statisticsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.StatisticsFragment">

    <LinearLayout
        android:id="@+id/configItemsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        app:layout_constraintVertical_bias="0.0">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggleButtonStatistics"
            style="?attr/materialButtonToggleGroupStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:checkedButton="@id/selectExpense"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/menuYear"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:selectionRequired="true"
            app:singleSelection="true"
            android:padding="10dp" >

            <Button
                android:id="@+id/selectExpense"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filterExpense" />

            <Button
                android:id="@+id/selectIncome"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filterIncome" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/menuYear"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/labelYear"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/toggleButtonStatistics"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingBottom="10dp"
            android:paddingHorizontal="10dp">

            <AutoCompleteTextView
                android:id="@+id/autocompleteYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number|date" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conf"
            android:paddingHorizontal="10dp" />

    </LinearLayout>

    <include
        android:id="@+id/include"
        layout="@layout/content_scrolling_graphs"
        android:layout_width="367dp"
        android:layout_height="605dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/configItemsLayout"
        app:layout_constraintVertical_bias="0.0" />

    <!-- FAB 1 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/primary_fab_conf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:contentDescription="configuraciÃ³n"
        android:src="@drawable/baseline_settings_24"
        app:elevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/shareFab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.984" />

    <!-- FAB 2 -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/limit_fab"
        android:layout_width="124dp"
        android:layout_height="52dp"
        android:layout_marginBottom="16dp"
        android:text="@string/txLimits"
        android:visibility="gone"
        app:icon="@drawable/baseline_calendar_month_24"
        app:iconSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/primary_fab_conf"
        app:layout_constraintEnd_toEndOf="@+id/primary_fab_conf" />

    <!-- FAB 3 -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/goal_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/txGoal"
        android:visibility="gone"
        app:icon="@drawable/baseline_outlined_flag_24"
        app:iconSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/limit_fab"
        app:layout_constraintEnd_toEndOf="@+id/limit_fab" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/shareFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:clickable="true"
        android:contentDescription="shareStatistics"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.929"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.927"
        app:srcCompat="@android:drawable/ic_menu_share" />

</androidx.constraintlayout.widget.ConstraintLayout>